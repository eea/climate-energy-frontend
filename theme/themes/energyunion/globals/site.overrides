//Cards
.card {
  h3.card-title {
    padding-left: 0!important;
  }
  .card-content {
    // background: #eee;
  }
}

.card-bottom .muted {
  color: #aaa;
  margin-right: 3px;
}

//Cards End


// Content
.content-page {
  min-height: 600px;
  
  h1,
  h2,
  h3,
  h4,
  h5 {
    font-family: @fontName;
  }

  .descTile {
    font-weight: 300;
  }
  
  h1.documentFirstHeading {
    font-size: @h1documentFirstHeading;
    border-bottom: 1px solid #ddd;
    padding-bottom: .5rem;
    &:before {
      display: none;
    }
  }
}



//Footer

.footerWrapper {
  border-top: 1px solid #cccc!important;
  .container {
    margin-left: 2rem!important;
    margin-right: 2rem!important;
  }
}

.footerWrapper{
  .column, .column.row {
    @media (max-width: 900px){
     min-width: 360px;
    }
  }
}

.footerWrapper .column {
  @media (min-width: 360px){
    width: 20% !important;
  }
}

.footerWrapper .column.row {
  flex-grow: 1;
  text-align: left;
  float: left;
  padding-left: 0!important;
  @media (max-width: 900px){
    width: 20% !important;
  }
}


.unlist {
  list-style-type: none;
  padding-left: 0;
  display: flex;
  flex-direction: row;
  margin-top: .5rem;
  margin-top: -2rem;
  li {
    margin-right: 1rem;
  }
  @media (max-width: 900px){
    margin-top: 0rem;
  }
}

.footerLogoWrapper {
  display: flex;
  .footerLogo {
    height: 50px;
    width: auto;
    margin: .5rem;
  }
}


//Footer End